@page
@using Voedselbank.Presentation.Pages.Account

@model LoginModel
@{
    ViewData["Title"] = "Login - Voedselbank";
}

<div class="login-container">
    <div class="login-box">
        <h2 class="text-center">Login to Voedselbank</h2>
        <p class="text-center text-muted">Enter your credentials to continue</p>

        <form method="post">
            <div class="input-group">
                <label>Email Address:</label>
                <input type="email" class="form-control" asp-for="Input.Email" required />
            </div>
            <div class="input-group">
                <label>Password:</label>
                <input type="password" class="form-control" asp-for="Input.Password" required />
            </div>
            <button type="submit" class="btn btn-success btn-block w-100">Login</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="error-message text-center">@Model.ErrorMessage</p>
        }

        <p class="text-center mt-3"><a href="#">Forgot Password?</a></p>
    </div>
</div>

<style>
    body {
        background-color: #f7f6e7;
        font-family: 'Arial', sans-serif;
    }

    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .login-box {
        background: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 350px;
        text-align: center;
    }

    .input-group {
        margin-bottom: 15px;
        text-align: left;
    }

    label {
        font-weight: bold;
        color: #2c6a2c;
    }

    input {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-success {
        background-color: #2c6a2c;
        color: white;
        padding: 10px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
    }

    .btn-success:hover {
        background-color: #248f24;
    }

    .error-message {
        color: red;
        margin-top: 10px;
        font-size: 14px;
    }
</style>
